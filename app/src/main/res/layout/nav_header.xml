<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="176dp"
    android:background="@drawable/nav_hearder_bg_gradient"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_username_H"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:text="Nguyễn Trung Đức"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/tv_userphonenumber_H"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="07 6666 4474" />
    <TextView
        android:id="@+id/tv_useremail_H"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="it.coder.duc@gmail.com" />

</LinearLayout>