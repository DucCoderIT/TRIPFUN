<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".Activities.InputTripDetailsActivity">
    <!--text input information-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:gravity="center"
        android:text="Điền một số thông tin"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        />
    <!-- position of user-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="10">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:paddingStart="5dp"
            android:text="Bạn là:"
            android:textSize="17sp"
            android:textStyle="bold"/>
        <RadioGroup
            android:id="@+id/group_position_IDe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">
            <RadioButton
                android:id="@+id/rdbtn_owner_IDe"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Chủ xe"
                android:textStyle="bold"/>
            <RadioButton
                android:id="@+id/rdbtn_customer_IDe"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hành khách"
                android:textStyle="bold"/>
        </RadioGroup>
    </LinearLayout>
    <!-- vehicle -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="10">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:paddingStart="5dp"
            android:text="Phương tiện:"
            android:textSize="17sp"
            android:textStyle="bold"/>
        <RadioGroup
            android:id="@+id/group_vehicle_IDe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">
            <RadioButton
                android:id="@+id/rdBtn_car_IDe"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Xe hơi"
                android:textStyle="bold"/>
            <RadioButton
                android:id="@+id/rdBtn_Moto_IDe"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Xe máy"
                android:textStyle="bold"/>
        </RadioGroup>
    </LinearLayout>
    <!-- seat -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="2">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:paddingStart="5dp"
                android:text="Ghế trống:"
                android:textSize="17sp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/edt_emptyseat_IDe"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:layout_gravity="center"
                android:inputType="number"
                android:hint="1"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:background="@color/bgTripItem"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:paddingStart="5dp"
                android:text="Tổng ghế:"
                android:textSize="17sp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/edt_fullseat_IDe"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:layout_gravity="center"
                android:inputType="number"
                android:hint="2"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:background="@color/bgTripItem"/>
        </LinearLayout>
    </LinearLayout>
    <!-- service and price -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:orientation="horizontal"
        android:weightSum="10">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:paddingStart="5dp"
            android:text="Chi phí:"
            android:textSize="17sp"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:orientation="vertical"
            android:paddingEnd="10dp"
            android:weightSum="10">
            <Spinner
                android:id="@+id/sp_service_IDe"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4.5"
                android:layout_gravity="top"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:background="@color/bgTripItem"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4.5"
                android:orientation="horizontal"
                android:weightSum="2">
                <EditText
                    android:id="@+id/edt_seatprice_IDe"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="50000"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:background="@color/bgTripItem"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text=" / 1 ghế"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!-- luggage -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingStart="5dp"
        android:paddingEnd="10dp"
        android:gravity="center_vertical"
        android:weightSum="10">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Hành lý:"
            android:textSize="17sp"
            android:textStyle="bold"/>
        <Spinner
            android:id="@+id/sp_luggage_IDe"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="5"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:background="@color/bgTripItem"/>
    </LinearLayout>
    <!-- plan -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="5dp"
        android:paddingEnd="10dp"
        android:gravity="center_vertical"
        android:weightSum="10">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Kế hoạch:"
            android:textSize="17sp"
            android:textStyle="bold"/>
        <Spinner
            android:id="@+id/sp_plan_IDe"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="5"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:background="@color/bgTripItem"/>
    </LinearLayout>
    <!-- with gender -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="5dp"
        android:paddingEnd="10dp"
        android:gravity="center_vertical"
        android:weightSum="10">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Muốn đi cùng:"
            android:textSize="17sp"
            android:textStyle="bold"/>
        <Spinner
            android:id="@+id/sp_wgender_IDe"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="5"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:background="@color/bgTripItem"/>
    </LinearLayout>
    <!-- button up trip -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="center">
        <Button
            android:id="@+id/btn_Uptrip_IDe"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Đăng chuyến"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@color/bgCostItem"/>
    </LinearLayout>
</LinearLayout>