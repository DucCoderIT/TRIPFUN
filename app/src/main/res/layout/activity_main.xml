<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
        android:background="@drawable/main_background_gradient"
        tools:context=".Activities.MainActivity">
        <Button
            android:id="@+id/btnUpTrip_H"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/opacity0"
            android:text="@string/uptrip"
            android:textColor="@color/white"
            android:textSize="@dimen/trip_upfind"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/white"/>
        <Button
            android:id="@+id/btnFindTrip_H"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/opacity0"
            android:text="@string/findtrip"
            android:textColor="@color/white"
            android:textSize="@dimen/trip_upfind"/>
    </LinearLayout>
    <Button
        android:id="@+id/btnHOMEinMain"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:text="Trang chuÌ‰"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/white_border"/>
</RelativeLayout>